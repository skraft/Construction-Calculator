<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/oplist"
                android:textSize="30dp"
                android:layout_weight="1"
                android:background="#323232"
                android:gravity="right"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/outputText"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="#323232"
                android:gravity="right"
                android:paddingRight="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#323232"
                    android:textSize="25dp"
                    android:text="3"
                    android:id="@+id/textView" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="_"
                    android:layout_weight="1"
                    android:background="#323232"
                    android:textSize="25dp"
                    android:id="@+id/textView4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#323232"
                    android:textSize="25dp"
                    android:text="4"
                    android:id="@+id/textView2" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text='"'
                android:id="@+id/textView3"
                android:textSize="50dp"
                android:layout_weight="0"
                android:background="#323232" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/opsSpacer" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/button_convert"
                android:onClick="clickConvert" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear"
                android:id="@+id/button_clear"
                android:onClick="clear" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_backspace"
                android:src="@drawable/ic_backspace_white_24dp"
                android:minHeight="48dp"
                android:onClick="clickBackspace" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/feet"
                android:id="@+id/button_feet"
                android:layout_weight="1"
                android:onClick="clickFeet" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/inch"
                android:id="@+id/button_inch"
                android:layout_weight="1"
                android:onClick="clickInch" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="∕"
                android:id="@+id/button_fraction"
                android:layout_weight="1"
                android:onClick="clickFraction" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+/-"
                android:id="@+id/button_neg"
                android:layout_weight="1"
                android:onClick="clickNegative" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/button_seven"
                android:layout_weight="1"
                android:onClick="clickNumber" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/button_eight"
                android:layout_weight="1"
                android:onClick="clickNumber" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/button_nine"
                android:layout_weight="1"
                android:onClick="clickNumber" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="÷"
                android:id="@+id/button_divide"
                android:layout_weight="1"
                android:onClick="clickOperation" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/button_four"
                android:layout_weight="1"
                android:onClick="clickNumber" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/button_five"
                android:layout_weight="1"
                android:onClick="clickNumber" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/button_six"
                android:layout_weight="1"
                android:onClick="clickNumber" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="x"
                android:id="@+id/button_multiply"
                android:layout_weight="1"
                android:onClick="clickOperation" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/button_one"
                android:layout_weight="1"
                android:onClick="clickNumber"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/button_two"
                android:layout_weight="1"
                android:onClick="clickNumber" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/button_three"
                android:layout_weight="1"
                android:onClick="clickNumber" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="−"
                android:id="@+id/button_subtract"
                android:layout_weight="1"
                android:onClick="clickOperation" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/button_decimal"
                android:layout_weight="1"
                android:onClick="clickNumber" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/button_zero"
                android:layout_weight="1"
                android:onClick="clickNumber" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/button_calculate"
                android:layout_weight="1"
                android:onClick="clickCalculate" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/button_add"
                android:layout_weight="1"
                android:onClick="clickOperation" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
