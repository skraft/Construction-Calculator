<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/oplist"
            android:textSize="30sp"
            android:background="#323232"
            android:textIsSelectable="false"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:gravity="end"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#323232">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/outputText"
                android:textSize="50sp"
                android:layout_weight="1"
                android:gravity="end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/outputUnits1"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/outputInch"
                android:textSize="50sp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/outputNumerator"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#cecece">
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:id="@+id/outputDenominator"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/outputUnits2"
                android:textIsSelectable="false"
                android:paddingEnd="8dp"
                android:paddingStart="2dp"
                android:paddingRight="8dp"
                android:paddingLeft="2dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/opsSpacer" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/button_convert"
                android:onClick="clickConvert" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear"
                android:id="@+id/button_clear"
                android:onClick="clear" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_backspace"
                android:src="@drawable/ic_backspace_white_24dp"
                android:minHeight="48dp"
                android:onClick="click_backspace" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/feet"
                android:id="@+id/button_feet"
                android:onClick="click_feet"
                android:layout_weight=".25" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/inch"
                android:id="@+id/button_inch"
                android:onClick="click_inch"
                android:layout_weight=".25" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button_fraction"
                android:src="@drawable/ic_fraction_white_24dp"
                android:onClick="click_fraction"
                android:layout_weight=".25" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+/-"
                android:id="@+id/button_neg"
                android:onClick="click_negative"
                android:layout_weight=".25" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/button_seven"
                android:layout_weight="1"
                android:onClick="click_number" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/button_eight"
                android:layout_weight="1"
                android:onClick="click_number" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/button_nine"
                android:layout_weight="1"
                android:onClick="click_number" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="รท"
                android:id="@+id/button_divide"
                android:layout_weight="1"
                android:onClick="click_operation" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/button_four"
                android:layout_weight="1"
                android:onClick="click_number" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/button_five"
                android:layout_weight="1"
                android:onClick="click_number" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/button_six"
                android:layout_weight="1"
                android:onClick="click_number" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="x"
                android:id="@+id/button_multiply"
                android:layout_weight="1"
                android:onClick="click_operation" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/button_one"
                android:layout_weight="1"
                android:onClick="click_number"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/button_two"
                android:layout_weight="1"
                android:onClick="click_number" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/button_three"
                android:layout_weight="1"
                android:onClick="click_number" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="โ"
                android:id="@+id/button_subtract"
                android:layout_weight="1"
                android:onClick="click_operation" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/button_decimal"
                android:layout_weight="1"
                android:onClick="click_number" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/button_zero"
                android:layout_weight="1"
                android:onClick="click_number" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/button_calculate"
                android:layout_weight="1"
                android:onClick="click_calculate" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/button_add"
                android:layout_weight="1"
                android:onClick="click_operation" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
